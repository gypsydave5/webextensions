{
  "name": "React Webextension",
  "version": "0.1",
  "description": "Fun!",

  "chrome_url_overrides": {
    "newtab": "override.html"
  },
  "browser_action": {
    "default_title": "React Webextension",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["static/js/background.bundle.js"],
    "persistent": false
  },
  "permissions": [
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:3000; object-src 'self'",

  "manifest_version": 2
}
